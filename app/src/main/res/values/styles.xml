<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--App Theme-->
    <style name="hzAppTheme" parent="AppTheme" />

    <!--Transparent Status Bar-->
    <style name="hzAppTheme.TransparentStatus" parent="hzAppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <!--hz Material Button-->
    <style name="hzButton" parent="Widget.AppCompat.Button.Colored" />

    <style name="hzButton.Accent">
        <item name="android:background">@drawable/material_button_ripple</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:radius">@dimen/material_button_radius</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">@dimen/material_view_width</item>
        <item name="android:layout_height">@dimen/material_view_height</item>
    </style>

    <!--hz Material Card-->
    <style name="hzCard" parent="Widget.AppCompat.AutoCompleteTextView" />

    <style name="hzCard.Accent">
        <item name="android:radius">@dimen/cardview_default_radius</item>
        <item name="android:layout_width">@dimen/material_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_xs</item>
        <item name="android:layout_marginRight">@dimen/material_margin_xs</item>
    </style>

    <style name="hzCard.Accent.FixedHeight">
        <item name="android:layout_height">@dimen/material_view_height</item>
    </style>

    <!--hz Material View-->
    <style name="hzView" parent="Widget.AppCompat.Light.AutoCompleteTextView" />

    <style name="hzView.Material">
        <item name="android:layout_marginLeft">@dimen/material_margin_xs</item>
        <item name="android:layout_marginRight">@dimen/material_margin_xs</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">@dimen/material_view_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00666666</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="hzView.CollapsingToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_color</item>
        <item name="colorPrimaryDark">@color/material_color_dark</item>
        <item name="colorAccent">@color/material_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Forms-->
    <style name="hzView.Form" parent="hzAppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/material_form_height</item>
        <item name="android:padding">@dimen/material_margin_sm</item>
        <item name="android:textSize">@dimen/ts_sm</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--Label-->
    <style name="hzView.Form.Label" parent="hzView.Form">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/ts_sm</item>
    </style>

    <style name="hzView.Form.Label.Small" parent="hzView.Form.Label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_small</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_medium</item>
        <item name="android:layout_marginTop">@dimen/material_margin_medium</item>
    </style>

    <!--Value-->
    <style name="hzView.Form.Value" parent="hzView.Form">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textSize">@dimen/ts_sm</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Tab-->
    <style name="hzTab" parent="Base.Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/material_color</item>
        <item name="tabGravity">fill</item>
        <!--<item name="tabIndicatorColor">#fff</item>-->
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">#fff</item>
        <item name="tabTextColor">#fff</item>
    </style>

    <style name="hzView.MaterialDivider" parent="hzAppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#bdbdbd</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_medium</item>
        <item name="android:layout_marginRight">@dimen/material_margin_medium</item>
    </style>

    <style name="hzView.MaterialDivider.Vertical" parent="hzView.MaterialDivider">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="hzView.MaterialSpinner" parent="hzView.Form.Value">
        <!--<item name="android:background">@drawable/material_spinner</item>-->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">right</item>
    </style>

    <!--<style name="MenuButtonsStyle1">-->
        <!--<item name="fab_size">mini</item>-->
        <!--<item name="fab_shadowColor">#444</item>-->
        <!--<item name="fab_colorNormal">@color/material_accent</item>-->
        <!--<item name="fab_colorPressed">@color/material_accent_dark</item>-->
        <!--<item name="fab_colorRipple">@color/material_accent_dark</item>-->
    <!--</style>-->

    <style name="CustomActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/material_color</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="actionMenuTextColor">#fff</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/material_color</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/material_accent</item>
    </style>

    <!--Network Connector-->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- ...other stuff here... -->
    </style>
</resources>
